<Level1>:
    target_layout: target_layout

    FloatLayout:
        id: target_layout
        size_hint: 1, 1

        # Добавляем BoxLayout для размещения кнопок слева сверху
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 80, 240  # Размер BoxLayout будет равен 80x240 пикселей
            pos: 10, 270  # Позиция слева сверху

            # Кнопка 1
            Button:
                text: 'Button 1'
                on_press: root.choose_ball()
                size_hint: None, None
                size: 80, 80

            # Кнопка 2
            Button:
                text: 'Button 2'
                on_press: root.choose_laser()
                size_hint: None, None
                size: 80, 80

            # Кнопка 3
            Button:
                text: 'Button 3'
                on_press: root.choose_bombshell()
                size_hint: None, None
                size: 80, 80

        # Остальной ваш код остается без изменений

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (None, None)
            size: 200, 50
            pos: 10, 10

            Label:
                id: bullets_label
                text: 'Bullets: 0'
                size_hint: (None, None)
                size: self.texture_size

            Label:
                id: lasers_label
                text: 'Lasers: 0'
                size_hint: (None, None)
                size: self.texture_size

            Label:
                id: bombshells_label
                text: 'Bombshells: 0'
                size_hint: (None, None)
                size: self.texture_size
