<Level1>:
    target_layout: target_layout

    FloatLayout:
        id: target_layout
        size_hint: (None, None)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 80, 240
            pos: 0, 620
            spacing: 10

            Button:
                text: 'Bullet'
                on_press: root.choose_ball()
                size_hint: None, None
                size: 80, 80

            Button:
                text: 'Laser'
                on_press: root.choose_laser()
                size_hint: None, None
                size: 80, 80

            Button:
                text: 'Bombshell'
                on_press: root.choose_bombshell()
                size_hint: None, None
                size: 80, 80

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (None, None)
            size: 200, 50
            pos: 10, 10

            Label:
                id: bullets_label
                text: 'Bullets: 0'
                size_hint: (None, None)
                size: self.texture_size

            Label:
                id: lasers_label
                text: 'Lasers: 0'
                size_hint: (None, None)
                size: self.texture_size

            Label:
                id: bombshells_label
                text: 'Bombshells: 0'
                size_hint: (None, None)
                size: self.texture_size
