# main_menu.kv

<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        size_hint: (None, None)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Button:
            text: 'Play'
            size_hint: (None, None)
            size: (200, 50)
            on_release: root.start_game()

        Button:
            text: 'Ranking'
            size_hint: (None, None)
            size: (200, 50)
            on_release: root.show_ranking()

        Button:
            text: 'Settings'
            size_hint: (None, None)
            size: (200, 50)
            on_release: app.root.controller.show_settings()

        Button:
            text: 'Help'
            size_hint: (None, None)
            size: (200, 50)
            on_release: app.root.controller.show_help()
